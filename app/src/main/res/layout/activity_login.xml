<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testback"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/ratTitleLoginImageView"
        android:layout_width="342dp"
        android:layout_height="88dp"
        android:layout_margin="16dip"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="184dp"
        android:fontFamily="@font/merriweather"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/creature_colosseum"
        android:textColor="@color/green"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/pleaseSignInLoginTextView"
        android:layout_width="337dp"
        android:layout_height="46dp"
        android:layout_margin="16dip"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/merriweather"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/please_sign_in"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratTitleLoginImageView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/usernameLoginEditText"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:autofillHints="Please enter username"
        android:background="@drawable/edittext_borders"
        android:gravity="center"
        android:hint="@string/username"
        android:inputType="text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pleaseSignInLoginTextView" />

    <EditText
        android:id="@+id/passwordLoginEditTextView"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_margin="16dp"
        android:autofillHints="Please enter username"
        android:background="@drawable/edittext_borders"
        android:gravity="center"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameLoginEditText"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="322dp"
        android:layout_height="54dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_borders"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/lato_heavy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLoginEditTextView" />

    <TextView
        android:id="@+id/noAccountLoginTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/merriweather"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/don_t_have_an_account_sign_up"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/signUpButtonLoginMenu"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/button_borders"
        android:fontFamily="@font/lato_heavy"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noAccountLoginTextView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>