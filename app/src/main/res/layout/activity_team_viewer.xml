<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamViewerActivity">

    <Space
        android:id="@+id/userDisplaySpacer"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/usernameDisplayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameDisplayTextView"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="username"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userDisplaySpacer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Team"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userDisplaySpacer" />

    <Button
        android:id="@+id/teamSlotOneButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/teamDisplayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teamSlotTwoButton"
        android:text="[Team slot 1]"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/teamSlotTwoButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/teamSlotOneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teamSlotThreeButton"
        android:text="[Team slot 2]"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/teamSlotThreeButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/teamSlotTwoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teamSlotFourButton"
        android:text="[Team slot 3]"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/teamSlotFourButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/teamSlotThreeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teamSlotFiveButton"
        android:text="[Team slot 4]"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/teamSlotFiveButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/teamSlotFourButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teamSlotSixButton"
        android:text="[Team slot 5]"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/teamSlotSixButton"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/teamSlotFiveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/backButtonSpacer"
        android:text="[Team slot 6]"
        android:textSize="24sp"
        />

    <Space
        android:id="@+id/backButtonSpacer"
        android:layout_width="225dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/saveTeamButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Save Team"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/backButtonSpacer"
        app:layout_constraintStart_toStartOf="@+id/backButtonSpacer"
        app:layout_constraintEnd_toEndOf="@id/backButtonSpacer"
        app:layout_constraintBottom_toBottomOf="@id/backButtonSpacer"
        />

    <Button
        android:id="@+id/loadTeamButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Load Team (for testing)"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/userDisplaySpacer"
        app:layout_constraintStart_toStartOf="@+id/userDisplaySpacer"
        app:layout_constraintEnd_toEndOf="@id/userDisplaySpacer"
        app:layout_constraintBottom_toBottomOf="@id/userDisplaySpacer"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="40dp"
        android:text="back"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButtonSpacer"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>