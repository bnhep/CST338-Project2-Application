<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BuildCreatureDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/creatureNameTextView"
        android:text="Creature Name"
        android:textSize="36sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/creatureBaseHealthStatTextView"
        android:text="Health goes here"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/creatureNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/creatureBaseAttackStatTextView"
        android:text="Attack goes here"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/creatureBaseHealthStatTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/creatureBaseDefenseStatTextView"
        android:text="Defense goes here"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/creatureBaseAttackStatTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/creatureBaseSpeedStatTextView"
        android:text="Speed goes here"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/creatureBaseDefenseStatTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

    <Space
        android:id="@+id/backButtonSpacer"
        android:layout_width="225dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/addToTeamButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Add To Team"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/backButtonSpacer"
        app:layout_constraintStart_toStartOf="@+id/backButtonSpacer"
        app:layout_constraintEnd_toEndOf="@id/backButtonSpacer"
        app:layout_constraintBottom_toBottomOf="@id/backButtonSpacer"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="40dp"
        android:text="back"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButtonSpacer"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>