<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BattleActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="40dp"
        android:text="Flee Battle"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userDisplaySpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Space
        android:id="@+id/userDisplaySpacer"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/usernameDisplayTextView"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameDisplayTextView"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="username"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userDisplaySpacer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/battlePromptTextView"
        android:text="Creature Battle!"
        android:textSize="36sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/userDisplaySpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/creatureViewSpacer"
        app:layout_constraintTop_toBottomOf="@id/battlePromptTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/abilityTwoButton"
        app:layout_constraintTop_toBottomOf="@id/creatureViewSpacer"
        app:layout_constraintBottom_toTopOf="@id/abilityThreeButton"
        android:text="Ability 1"
        android:textSize="24sp"
        android:id="@+id/abilityOneButton"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/abilityOneButton"
        app:layout_constraintTop_toBottomOf="@id/creatureViewSpacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/abilityFourButton"
        android:text="Ability 2"
        android:textSize="24sp"
        android:id="@+id/abilityTwoButton"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/abilityFourButton"
        app:layout_constraintTop_toBottomOf="@id/abilityOneButton"
        app:layout_constraintBottom_toTopOf="@id/bottomSpacer"
        android:text="Ability 3"
        android:textSize="24sp"
        android:id="@+id/abilityThreeButton"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/abilityThreeButton"
        app:layout_constraintTop_toBottomOf="@id/abilityTwoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomSpacer"
        android:text="Ability 4"
        android:textSize="24sp"
        android:id="@+id/abilityFourButton"/>

    <Space
        android:id="@+id/bottomSpacer"
        android:layout_width="225dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>